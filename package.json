{
  "name": "devogit",
  "publisher": "devoteam",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ahmed-Zaki-BENNECER/DevoGit-VsCode"
  },
  "displayName": "DevoGit",
  "description": "This extension allows you to browse the Devoteam GitLab repository.",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "devogit.devtools"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devogit-sidebar-view",
          "title": "DevoGit - N Platform",
          "icon": "media/devoteam.svg"
        }
      ]
    },
    "views": {
      "devogit-sidebar-view": [
        {
          "type": "webview",
          "id": "devogit-sidebar",
          "name": "DevoGit - N Platform",
          "icon": "media/devoteam.svg",
          "contextualTitle": "DevoGit"
        }
      ]
    },
    "configuration": {
      "title": "DevoGit",
      "properties": {
        "devoteam.devogit.maxSearchResults": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of displayed search results."
        },
        "devoteam.devogit.keepContentWhenHidden": {
          "type": "boolean",
          "default": true,
          "description": "Keep the search content when the sidebar is collapsed."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "devogit.openSettings",
          "group": "navigation",
          "when": "devogit.webviewVisible"
        }
      ]
    },
    "commands": [
      {
        "command": "devogit.openSettings",
        "title": "Open Extension Settings",
        "icon": "$(settings-gear)",
        "category": "DevoGit"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sinon": "^10.0.15",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "sinon": "^15.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "fs": "^0.0.1-security"
  }
}
